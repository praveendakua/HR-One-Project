     <div class=" container card" >
      
    <grid> <h3 class="card-header" style="text-align: center;">Employee Directory</h3> </grid> 
    <br>
           
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>SI.No.</th>
              <th>Employee Code</th>
              <th>Username</th>
              <th>Manager Code</th>
              <th>Edit/Delete</th>
            </tr>
          </thead>
          <tbody>
            
              <% for(let i = 0; i<allemployees.length; i++) { %> 
                <% if(allemployees[i].username !== employees.username) {%> 
              <tr>
              <td><b><%= i %> </b></td>
              <td><%= allemployees[i].employeeCode %></td>
              <td><%= allemployees[i].username %></td>
              <td><%= allemployees[i].managerCode %></td>
              <td><div class="container">
                <div class="row">
                  <div class="col-sm-3 col-md-3">
                     <form action="/employeeDirectory/<%= allemployees[i]._id %>">
                      <button class="btn btn-success" id="statusbutton" type="submit" >Edit</button>
                     </form>
                  </div>
                  <div class="col-sm-3 col-md-3">
                    <form action="/employeeDirectory/<%= allemployees[i]._id %>?_method=DELETE", method="POST">
                      <button class="btn btn-danger" id="statusbutton"  type="submit" >Delete</button>
                     </form>
                  </div>
                </div>
              </div></td>
            <% } %> 
              <% } %> 
            </tr>
          </tbody>
        </table>
        <%  if( employees.role  === 'Admin'){ %> 
