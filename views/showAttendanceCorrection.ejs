        <form action="/attendance/correction/<%=employees._id %> " method="POST">
            <div class="card">
                <h5 class="card-header">REGULARIZATION APPLICATION FORM</h5>
                <div class="card-body">
                  <h5 class="card-title">Request Sent To: <%= manager[0].username %> </h5>
                  <p class="card-text">Attendance Date: <input type="date" name="correctiondate" ></p>
                  <p class="card-text">Punch In: <input type="time" name="punchin" > </p>
                  <p class="card-text">Punch Out: <input type="time" name="punchout" > </p>
                  <p class="card-text">Remarks: <input type="text" name="remark" > </p>
                  <button>Submit</button>
                </div>
              </div>
            </form>

            <div class="container mt-4">
                <table>
                    <tr>
                      <th>Date</th>
                      <th>Punch In</th>
                      <th>Punch Out</th>
                      <th>Remark</th>
                      <th>Status</th>
                    </tr>
                    
                    <% if(correction){ %> 
                      <% for(let i of correction) { %> 
                          <tr>
                          <td> <%= i.date %>  </td>
                          <td> <%= i.checkin %>  </td>
                          <td> <%= i.checkout %>  </td>
                          <td> <%= i.remark %>  </td>
                          <td> <%= i.status %>  </td>
                          </tr>
                        <% } %>  
                        <% } %> 
                    
                  </table>
              </div>
        
  

